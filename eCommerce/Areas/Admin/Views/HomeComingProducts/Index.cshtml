@model IEnumerable<eCommerce.Models.HomeComingProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped ">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NewPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrevPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Info)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Brand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Memory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Camera)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div style="margin: 0 auto; background-image: url(/Public/img/coming/@item.Image); background-repeat: no-repeat; background-position: center; background-size: contain; height: 100px; width: 100px"></div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrevPrice)
                        </td>
                        <td style="word-wrap: break-word;min-width: 400px;max-width: 400px;">
                            @Html.DisplayFor(modelItem => item.Info)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Memory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Camera)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
