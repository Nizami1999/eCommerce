@model eCommerce.Models.HomeCollection

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "HomeCollections", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>HomeCollection</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            @Html.LabelFor(model => model.LeftImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessage("ImageL", "", new { @class = "text-danger" })

                <div style="margin: 1rem auto; background-image: url(/Public//img/collect/@Model.LeftImage); width: 100%; height: 300px; background-repeat: no-repeat; background-size: contain"></div>
                <input class="form-control" type="file" name="ImageL" />
                <input type="hidden" name="oldImageL" value="@Model.LeftImage" />
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.CenterImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessage("ImageC", "", new { @class = "text-danger" })

                <div style="margin: 1rem auto; background-image: url(/Public//img/collect/@Model.CenterImage); width: 100%; height: 300px; background-repeat: no-repeat; background-size: contain"></div>
                <input class="form-control" type="file" name="ImageC" />
                <input type="hidden" name="oldImageC" value="@Model.CenterImage" />
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.RightImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessage("ImageR", "", new { @class = "text-danger" })

                <div style="margin: 1rem auto; background-image: url(/Public//img/collect/@Model.RightImage); width: 100%; height: 300px; background-repeat: no-repeat; background-size: contain"></div>
                <input class="form-control" type="file" name="ImageR" />
                <input type="hidden" name="oldImageR" value="@Model.RightImage" />
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.FirstTextMain, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstTextMain, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstTextMain, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.FirstTextInfo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.FirstTextInfo, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.FirstTextInfo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.SecondTextMain, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SecondTextMain, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SecondTextMain, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.SecondTextInfo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.SecondTextInfo, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.SecondTextInfo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-warning" />
                @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-success" })
            </div>
        </div>

    </div>
}
