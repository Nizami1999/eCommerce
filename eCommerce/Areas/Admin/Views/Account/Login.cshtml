@{ Layout = null; }

<!doctype html>
<html lang="en">
<head>
    <title>Admin | Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Public/Login/Public/css/style.css">

    <style>
        .validation-summary-errors ul{
            list-style-type: none;
        }
        .validation-summary-errors li {
            color: white
        }
    </style>

</head>
<body class="img js-fullheight" style="background-image: url(/Areas/Admin/Public/Login/Public/images/bg.jpg);">
    <section style="overflow: hidden;" class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Admin</h3>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <form action="#" method="post" class="signin-form">

                            <div class="form-group">
                                <input name="username" type="text" class="form-control" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <input name="password" id="password-field" type="password" class="form-control" placeholder="Password">
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Areas/Admin/Public/Login/Public/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Public/Login/Public/js/popper.js"></script>
    <script src="~/Areas/Admin/Public/Login/Public/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Public/Login/Public/js/main.js"></script>

</body>
</html>

