@model eCommerce.Models.Blog
@{
    ViewBag.Title = "Details";
}

<!-- pages-title-end -->
<!-- blog-section-start -->
<section class="pages blog single-blog-area section-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="single-blog-page">
                    <div style="margin: 0 auto; height: 500px; width: 100%; overflow: hidden;" class="single-blog-img">
                        <img style="object-fit: cover; height: 100%; width: 100%;" src="~/Public/img/blog/@Model.Image" alt="blog-image" />
                    </div>
                    <div class="padding30">
                        <div class="blog-text">
                            <div class="post-title">
                                <h3>@Model.MainTitle</h3>
                                <ul class="clearfix">
                                    <li><i class="pe-7s-comment"></i>@Convert.ToDateTime(Model.Date).ToString("dd MMMM | yyyy")</li>
                                </ul>
                            </div>
                            <div class="italic">
                                <p style="margin: 2rem 0;">@Model.Info</p>
                            </div>
                            <div style="margin-top: 50px;" class="share-tag clearfix">
                                <ul class="blog-share floatleft">
                                    <li><h5>share </h5></li>
                                    <li><a href="#"><i class="mdi mdi-facebook"></i></a></li>
                                    <li><a href="#"><i class="mdi mdi-twitter"></i></a></li>
                                    <li><a href="#"><i class="mdi mdi-linkedin"></i></a></li>
                                    <li><a href="#"><i class="mdi mdi-instagram"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- single post end -->
            </div>
        </div>
    </div>
</section>
<!-- blog section end -->
