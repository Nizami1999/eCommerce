
@{
    ViewBag.Title = "Index";
}



@section styles{
    <!-- Font-material-design -->
    <link rel="stylesheet" href="~/Public/LoginAndRegister/Public/fonts/material-icon/css/material-design-iconic-font.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Public/LoginAndRegister/Public/css/style.css">
}
<div class="loginRegister">
    @{
        if (ViewBag.SuccessMessage != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Congrats!", "@ViewBag.SuccessMessage", "success");
                }
            </script>
        }
        if (ViewBag.ErrorMessage != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Error!", "@ViewBag.ErrorMessage", "error");
                }
            </script>
        }
    }

    <!-- Sing in  Form -->
    <section style="margin: 4rem 0;" class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/Public/LoginAndRegister/Public/images/signin-image.jpg" alt="sing in image"></figure>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Sign In</h2>
                    <h6 class="text-center">@Html.ValidationMessage("Empty", new { @class = "text-danger" })</h6>
                    <h6 class="text-center">@Html.ValidationMessage("Fill", new { @class = "text-danger" })</h6>
                    <form method="POST" class="register-form" action="/User/Login" id="login-form">
                        <div class="form-group">
                            <label for="username"><i class="zmdi zmdi-account-add material-icons-name"></i></label>
                            <input type="text" name="username" id="username" placeholder="Your Username" />
                        </div>
                        <div class="form-group">
                            <label for="password"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="password" id="pass" placeholder="Password" />
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Sign up form -->
    <section style="margin: 4rem 0;" class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign Up</h2>
                    <form method="POST" class="register-form" action="/User/Register" id="register-form">
                        <div class="form-group">
                            <label for="fullname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="fullname" id="fullname" placeholder="Your Full name" />
                            @Html.ValidationMessage("fullname", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="username"><i class="zmdi zmdi-account-add material-icons-name"></i></label>
                            <input type="text" name="username" id="username" placeholder="Your Username" />
                            @Html.ValidationMessage("username", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input type="text" name="email" id="email" placeholder="Your Email" />
                            @Html.ValidationMessage("email", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="password" id="pass" placeholder="Password" />
                            @Html.ValidationMessage("password", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />
                            @Html.ValidationMessage("re_pass", new { @class = "text-danger" })
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/Public/LoginAndRegister/Public/images/signup-image.jpg" alt="sing up image"></figure>
                </div>
            </div>
        </div>
    </section>


</div>




<!-- JS -->

@section scripts{
    <script src="~/Public/LoginAndRegister/Public/js/main.js"></script>
}
